@using System.Threading.Tasks
@{ ViewData["Title"] = "Home Page"; }

<div class="row">
    <div class="col-md-3">
        <ul>
            @foreach (var f in @Model.ChildContainers)
            {
<li><a href="@f.Url">@f.Name</a></li>
}
        </ul>
        <ul>
            @foreach (var f in @Model.ChildFiles)
            {
                <li><a href="@Url.Action("Detail",new {f.Id})">@f.Name</a> - <a href="@f.EditUrl">Direct Edit Link</a></li>
            }
        </ul>
    </div>
</div>
